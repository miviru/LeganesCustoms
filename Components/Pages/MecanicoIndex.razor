@page "/mecanico"
@inject NavigationManager NavigationManager
@using LeganesCustomsBlazor.Models;

<PageTitle>Mecánico</PageTitle>

<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-lg-12">
            <h3>BIENVENIDO, @empleado.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-6 col-lg-2"></div>

        <div class="col-12 col-lg-4">
            <div class="card mt-4" style="background-image: url('/fondo2.jpg'); background-size: cover; background-position: center;">
                <div class="card-body d-flex justify-content-center align-items-center h-100">
                    <NavLink class="text-white text-center" href="@($"/detallesEmpleado/{empleado.Id}")" style="text-decoration: none;">MIS DATOS</NavLink>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card mt-4" style="background-image: url('/fondo2.jpg'); background-size: cover; background-position: center;">
                <div class="card-body d-flex justify-content-center align-items-center h-100">
                    <NavLink class=" text-white me-2" href="@($"/detallesCita/{empleado.Id}")" style="text-decoration: none;">CITAS</NavLink>
                </div>
            </div>
        </div>
    </div>
        
</div>

@code {
    private Empleado empleado;

    protected override void OnInitialized()
    {
        // Simulación de cliente logueado
        empleado = new Empleado
        {
            Id = 1,
            Nombre = "Ernesto Mojamuto"
        };
    }
}